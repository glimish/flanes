{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Integration Tests",
      "type": "debugpy",
      "request": "launch",
      "module": "tests.test_integration",
      "cwd": "${workspaceFolder}",
      "justMyCode": true
    },
    {
      "name": "Run pytest",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": ["tests/", "-v"],
      "cwd": "${workspaceFolder}",
      "justMyCode": true
    },
    {
      "name": "Vex CLI",
      "type": "debugpy",
      "request": "launch",
      "module": "vex.cli",
      "args": ["status"],
      "cwd": "${workspaceFolder}",
      "justMyCode": true
    }
  ]
}
