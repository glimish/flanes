{
  "name": "fla-vscode",
  "displayName": "Fla Version Control",
  "description": "VSCode integration for Fla â€” version control for AI agents",
  "version": "0.1.0",
  "publisher": "fla",
  "license": "MIT",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": ["SCM Providers", "Other"],
  "keywords": ["fla", "version control", "ai", "agents"],
  "activationEvents": [
    "workspaceContains:.fla"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "fla.status",
        "title": "Fla: Show Status"
      },
      {
        "command": "fla.snapshot",
        "title": "Fla: Snapshot Workspace"
      },
      {
        "command": "fla.commit",
        "title": "Fla: Commit (Snapshot + Propose + Accept)"
      },
      {
        "command": "fla.history",
        "title": "Fla: Show History"
      },
      {
        "command": "fla.lanes",
        "title": "Fla: List Lanes"
      },
      {
        "command": "fla.createLane",
        "title": "Fla: Create Lane"
      },
      {
        "command": "fla.switchLane",
        "title": "Fla: Switch Lane"
      },
      {
        "command": "fla.diff",
        "title": "Fla: Show Diff"
      }
    ],
    "configuration": {
      "title": "Fla",
      "properties": {
        "fla.path": {
          "type": "string",
          "default": "fla",
          "description": "Path to the fla CLI binary"
        },
        "fla.autoRefresh": {
          "type": "boolean",
          "default": true,
          "description": "Automatically refresh status bar"
        },
        "fla.refreshInterval": {
          "type": "number",
          "default": 5000,
          "description": "Auto-refresh interval in milliseconds"
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.3.0",
    "@vscode/vsce": "^2.22.0"
  }
}
