{
  "name": "vex-vscode",
  "displayName": "Vex Version Control",
  "description": "VSCode integration for Vex â€” version control for AI agents",
  "version": "0.1.0",
  "publisher": "vex",
  "license": "MIT",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": ["SCM Providers", "Other"],
  "keywords": ["vex", "version control", "ai", "agents"],
  "activationEvents": [
    "workspaceContains:.vex"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vex.status",
        "title": "Vex: Show Status"
      },
      {
        "command": "vex.snapshot",
        "title": "Vex: Snapshot Workspace"
      },
      {
        "command": "vex.commit",
        "title": "Vex: Commit (Snapshot + Propose + Accept)"
      },
      {
        "command": "vex.history",
        "title": "Vex: Show History"
      },
      {
        "command": "vex.lanes",
        "title": "Vex: List Lanes"
      },
      {
        "command": "vex.createLane",
        "title": "Vex: Create Lane"
      },
      {
        "command": "vex.switchLane",
        "title": "Vex: Switch Lane"
      },
      {
        "command": "vex.diff",
        "title": "Vex: Show Diff"
      }
    ],
    "configuration": {
      "title": "Vex",
      "properties": {
        "vex.path": {
          "type": "string",
          "default": "vex",
          "description": "Path to the vex CLI binary"
        },
        "vex.autoRefresh": {
          "type": "boolean",
          "default": true,
          "description": "Automatically refresh status bar"
        },
        "vex.refreshInterval": {
          "type": "number",
          "default": 5000,
          "description": "Auto-refresh interval in milliseconds"
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.3.0",
    "@vscode/vsce": "^2.22.0"
  }
}
